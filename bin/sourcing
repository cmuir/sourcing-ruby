#!/usr/bin/env ruby

require 'sourcing'
require 'json'
require 'optparse'

begin
  require 'awesome_print'
rescue LoadError
  def ap(value)
    puts JSON.pretty_generate(value)
  end
end

options = {}
values  = {}

parser  = OptionParser.new do |opts|
  opts.banner = "Usage: sourcing EMAIL [options]"

  opts.on("--twitter HANDLE", String, "Twitter handle") do |v|
    values[:twitter] = v
  end

  opts.on("--github HANDLE", String, "GitHub handle") do |v|
    values[:github] = v
  end

  opts.on("--email EMAIL", String, "Email") do |v|
    values[:email] = v
  end

  opts.on("--name NAME", String, "Name") do |v|
    values[:name] = v
  end

  opts.on("--api-key KEY", String, "Sourcing") do |v|
    options[:api_key] = v
  end
end

parser.parse!

if id = ARGV[0]
  values[:id] ||= id
end

if key = ENV['SOURCING_KEY']
  options[:api_key] ||= key
end

if values == {}
  puts parser
  exit
end

person = Sourcing::Person.find(values, options)

if person
  ap person.to_hash
else
  puts 'Person not found'
end